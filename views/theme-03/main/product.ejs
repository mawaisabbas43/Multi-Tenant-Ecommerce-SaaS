<% layout('theme-03/layout') -%>


<!--banner-->
<div style="background-image: url(<%if(store.image.url!=null){%><%=store.image.url%><%}else{%>/theme-03/images/1.jpg<%}%>);
				background-size: cover;
				width: 100%;
				height: 360px;
				background-repeat: no-repeat;"
        >
	</div>			 
<!--//banner-->
<!--breadcrumbs-->
<div class="breadcrumbs">
  <div class="container">
    <ol
      class="breadcrumb breadcrumb1 animated wow slideInLeft"
      data-wow-delay=".5s"
    >
      <li>
        <a href="/<%=storeId%>"
          ><span class="glyphicon glyphicon-home" aria-hidden="true"></span
          >Home</a
        >
      </li>
      <li class="active">
        <a style="color:white;" href=""><%=product.fname%></a>
      </li>
    </ol>
  </div>
</div>
<!--//breadcrumbs-->
<!--single-page-->
<div class="single">
  <div class="container">
    <div class="single-info">
      <div
        class="col-md-6 single-top wow fadeInLeft animated"
        data-wow-delay=".5s"
      >
        <div class="flexslider">
          <ul class="slides">
            <%product.images.forEach(function(image){%>
            <li data-thumb="<%=image.url%>">
              <div class="thumb-image">
                <img
                  src="<%=image.url%>"
                  alt="<%=image.caption%>"
                  data-imagezoom="true"
                  class="img-responsive"
                />
              </div>
            </li>
            <%})%>
            <!-- <li data-thumb="/theme-03/images/s2.jpg">
							<div class="thumb-image"> <img src="/theme-03/images/s2.jpg" data-imagezoom="true"
									class="img-responsive" alt=""> </div>
						</li> -->
          </ul>
        </div>
      </div>
      <div
        class="col-md-6 single-top-left simpleCart_shelfItem wow fadeInRight animated"
        data-wow-delay=".5s"
      >
        <h3><%=product.fname%></h3>
        <h4><%=product.lname%></h4>
        <hr />
        <p>
          <span style="font-weight: bold;" class="text-info">Summary:</span>
          <%=product.summary%>
        </p>
        <p>
          <span style="font-weight: bold;" class="text-info"
            >Remaining Item:</span
          >
          <%=product.count%>
        </p>
        <p>
          <span style="font-weight: bold;" class="text-info">SKU#:</span>
          <%=product.sku%>
        </p>
        <form action="/<%=storeId%>/cart" method="POST">
        <%_product.variants.forEach(function(variant){%>
        <div>
          <p class="text-info">
            <%=variant.name%><span class="text-danger">*</span>
          </p>
          <%_var i=1;%>
          <%variant.options.forEach(function(option){%>
          <div>
            <input
              type="radio"
              id="<%=option%>"
              name="<%=variant.name%>"
              value="<%=option%>"
              <%if(i==1){%>checked<%}%>
            />
            <label for="<%=option%>"><%=option%></label>
          </div>
          <%i++;})%>
        <br>
        <%})%>
                                        <h1 class="text-info font-weight-bold">Price: $<%=product.price%></h1>
                                        </div>
                                         <input
                                            type="hidden"
                                            name="productId"
                                            value="<%= product._id %>"
                                        />
                                        <input type="hidden" name="nonce" value="<%= nonce %>" />
                                        <input type="hidden" name="storeId" value="<%=storeId%>"/><br>
                                        <label for="Color2" class="text-info font-weight-bold">Quantity: </label>
                                        <input
                                                type="number"
                                                class=""
                                                min="1"
                                                max="<%=product.count%>"
                                                name="qty"
                                                value="1"
                                        />
                                        <div class="btn_form">
                                         <button type="submit" class="btn btn-info" style="margin-top:10px;">
                                        ADD TO CART
                                         </button>
                                        </form>
          
        </div>
                                        
                                    
        
      </div>
      <hr />

      <div class="clearfix"></div>
      <div>
        <div class="text-info" style="font-weight: bold; padding-top:30px;">
          Description:
        </div>
        <div>
          <p><%=product.description%></p>
        </div>
      </div>
      <div class="text-info" style="font-weight: bold; padding-top:30px;">
        More information:
      </div>
      <!-- start table-->

      <div class="col-md-12" style="padding-top:30px; padding-bottom:30px;">
        <div class="table-responsive">
          <table class="table table-bordered table-hover">
            <tbody>
              <tr>
                <th>Name</th>
                <th>Value</th>
              </tr>
              <%product.attributes.forEach(function(attribute){%>
              <tr>
                <td><%=attribute.name%></td>
                <td><%=attribute.value%></td>
              </tr>
              <%})%>
            </tbody>
          </table>
        </div>

        <!--end of .table-responsive-->
      </div>
