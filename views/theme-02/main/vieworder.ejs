<% layout('theme-02/layout') -%>

<!-- inner banner -->
	<div style="background-image: url(<%if(store.image.url!=null){%><%=store.image.url%><%}else{%>/theme-02/images/inner_ban.jpg<%}%>);
				background-size: cover;
				width: 100%;
				height: 360px;
				background-repeat: no-repeat;"
	class="">
	</div>
	<!-- //inner banner -->
    <!-- breadcrumbs -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/<%=storeId%>">Home</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">My Orders</li>
        </ol>
    </nav>
    <!-- //breadcrumbs -->

<!--  -->
<section class="wthree-row pt-3 pb-sm-5 w3-">
  <div class="container">
    <h1 class="head_agileinfo text-center text-capitalize p-5">
      View Order by Email or OrderId
    </h1><br>
    <div class="row m-5">  
          <div class="col-md-6 ">
            <h1 class="head_agileinfo  text-capitalize">
              Search by Email
            </h1><br>
            <form  
            class="mt-2"
            method="get"
                    action="/<%=storeId%>/myorders/email"
            >
            <div class="form-group">
                    <label for="formGroupExampleInput2">Enter your first name</label>
                    <input class="form-control" 
                            placeholder="Enter your first name"
                            name="fname"
                            type="text"
                            required=""
                    >
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput2">Enter your last name</label>
                    <input class="form-control" 
                            placeholder="Enter your last name"
                            name="lname"
                            type="text"
                            required=""
                    >
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput">Enter email</label>
                    <input class="form-control"
                            placeholder="Enter your Email"
                            name="email"
                            type="email"
                            required=""
                    >
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput2">Enter phone number</label>
                    <input class="form-control" 
                            placeholder="Enter your phone"
                            name="phone"
                            type="text"
                            required=""
                    >
                </div>
                
                 <button type="submit" class="btn btn-primary">Search</button>
            </form>
            
          </div>
          <div class="col-md-6 ">
            <h1 class="head_agileinfo  text-capitalize ">
              Search by OrderId
            </h1><br>
            <form class="mt-2"
              method="get"
              action="/<%=storeId%>/myorders/id"
            >
              <div class="form-group">
                    <label for="formGroupExampleInput2">Enter OrderId</label>
                    <input class="form-control" 
                             placeholder="Search by OrderId"
                    name="id"
                    id="srch-term"
                    type="text"
                    required=""
                    >
                </div> 
                 <button type="submit" class="btn btn-primary">Search</button>
            </form>
         
        
      </div>
      
      <!--  details -->
    </div>
    <!-- // details container -->
  </div>

  <!--// map grid ends here-->
</section>


