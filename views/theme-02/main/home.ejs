<% layout('theme-02/layout') -%>  
  
<!-- inner banner -->
	<div style="background-image: url(<%if(store.image.url!=null){%><%=store.image.url%><%}else{%>/theme-02/images/inner_ban.jpg<%}%>);
				background-size: cover;
				width: 100%;
				height: 360px;
				background-repeat: no-repeat;"
	class="">
	</div>
	<!-- //inner banner -->
    <!-- //banner -->
 
   
 <!-- new arrivals -->
    <section class="tabs_pro py-md-5 pt-sm-3 pb-5">
        <h5 class="head_agileinfo text-center text-capitalize pb-5">New Products</h5>
        <div class="tabs tabs-style-line pt-md-5">
            
        <div id="owl-demo3" class="owl-carousel text-center">
        <%_var i=0;%> <%_ for(i=0;i<4&&i<newArrivals.length;i++){let product=newArrivals[i];%>
                        <div class="item">
                            <!-- card -->
                            <div class="card product-men p-3">
                                <div class="men-thumb-item">
                                   <a href="/<%=storeId%>/products/<%=product._id%>"> <img src="<%=product.images[0].url%>" alt="img" class="card-img-top"></a>
                                    <div class="men-cart-pro">
                                        <div class="inner-men-cart-pro">
                                            <a class="link-product-add-cart" href="/<%=storeId%>/products/<%=product._id%>">Quick View</a>
                                        </div>
                                    </div>
                                </div>
                                <!-- card body -->
                                <div class="card-body  py-3 px-2">
                                    <h5 class="card-title text-capitalize"><a class="name" href="/<%=storeId%>/products/<%=product._id%>"><%=product.fname%></a></h5>
                                
                                    <p class="text-left text-dark font-weight-bold">$<%=product.price%></p>
                                    
                                </div>
                                <!-- card footer -->
                               
                            </div>
                            <!-- //card -->
                        </div>
                        <%_ } %>
                      
                       
                        
                    </div>
                

        </div>
        
    </section>
    
    <!-- //newe arrivals -->

    <!-- Popular arrivals -->
    <section class="tabs_pro py-md-5 pt-sm-3">
        <h5 class="head_agileinfo text-center text-capitalize pb-5">Popular Arrivals</h5>
        <div class="tabs tabs-style-line pt-md-5">
            <div id="owl-demo3" class="owl-carousel text-center">
        <%_var j=0,k=i,l=0;%> <%_ for(;i<12&&i<popular.length+newArrivals.length;i++){%>
            <%if(j<popular.length){var product=popular[j];%>
            <%}else{var product=newArrivals[k];k++}%>
                        <div class="item">
                            <!-- card -->
                            <div class="card product-men p-3">
                                <div class="men-thumb-item">
                                   <a href="/<%=storeId%>/products/<%=product._id%>">
                                    <img  src="<%=product.images[0].url%>"
							            alt="<%=product.images[0].caption%>" 
                                        class="card-img-top">
                                    </a>
                                    <div class="men-cart-pro">
                                        <div class="inner-men-cart-pro">
                                            <a class="link-product-add-cart" href="/<%=storeId%>/products/<%=product._id%>">Quick View</a>
                                        </div>
                                    </div>
                                </div>
                                <!-- card body -->
                                <div class="card-body  py-3 px-2">
                                    <h5 class="card-title text-capitalize"><a class="name" href="/<%=storeId%>/products/<%=product._id%>"><%=product.fname%></a></h5>
                                
                                    <p class="text-left text-dark font-weight-bold">$<%=product.price%></p>
                                    
                                </div>
                                <!-- card footer -->
                               
                            </div>
                            <!-- //card -->
                        </div>
                        <%j++;l++;}%>
                    </div>
                   </div>           
                </div>
    </section>
    <!-- //Popular arrivals -->


   
   
   

   