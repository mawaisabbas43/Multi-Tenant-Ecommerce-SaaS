<% layout('theme-02/layout') -%>

<!-- inner banner -->
	<div style="background-image: url(<%if(store.image.url!=null){%><%=store.image.url%><%}else{%>/theme-02/images/inner_ban.jpg<%}%>);
				background-size: cover;
				width: 100%;
				height: 360px;
				background-repeat: no-repeat;"
	class="">
	</div>
	<!-- //inner banner -->
    <!-- breadcrumbs -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/<%=storeId%>">Home</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">ORDER'S LIST</li>
        </ol>
    </nav>  
    <!-- //breadcrumbs -->


<!-- contact -->
<section class="wthree-row pt-3 pb-sm-5 w3-contact">
  <div class="container">
    <h5 class="head_agileinfo text-center text-capitalize pb-5">
      ORDER'S LIST
    </h5>
    <div class="row">
      <div class="col-md-3">
        <h4>First Name :</h4>
        <h5><%=orders[0].fname%></h5>
      </div>
      <div class="col-md-3">
        <h4>Last Name :</h4>
        <h5><%=orders[0].lname%></h5>
      </div>
      <div class="col-md-3">
        <h4>Email:</h4>
        <h5><%=orders[0].email%></h5>
      </div>
      <div class="col-md-3">
        <h4>Phone :</h4>
        <h5><%=orders[0].phone%></h5>
      </div>
    </div>
    <div class="row">
      <!-- <div class="col-md-1"></div> -->
      <div class="col-md-12">
        <table class="table table-hover table-responsive">
          <thead class="thead-dark ">
            <tr>
              <th scope="col">Date</th>
              <th scope="col">Order Id</th>
              <th scope="col">Ship To</th>
              <th scope="col">Order Total</th>
              <th scope="col">Order Status</th>
              <th scope="col">View Order</th>
            </tr>
          </thead>
          <tbody>
            <%orders.forEach(order=>{%>
            <tr>
              <th scope="row"><%=order.date%></th>
              <td><%=order._id%></td>
              <td>
                <%=order.address%>,<%=order.city%>,zip:<%=order.zip%>,<%=order.state%>,<%=order.country%>
              </td>
              <td><%=order.formattedTotals%></td>
              <td><%=order.status%></td>
              <td>
                <a
                  type="button"
                  href="/<%=storeId%>/myorders/id/<%=order._id%>"
                  class="btn btn-primary btn-sm"
                  >View Order</a
                >
              </td>
            </tr>
            <%})%>
          </tbody>
        </table>
      </div>
      <!-- <div class="col-md-1"></div> -->
    </div>
    <!-- //contact details container -->
  </div>

  <!--//contact map grid ends here-->
</section>


