<% layout('theme-01/layout') -%>
 

<!--banner -->
<div  style="text-align: center;
  background: url(<%if(store.image.url!=null){%><%=store.image.url%><%}else{%>/theme-01/images/b2.jpg<%}%>) no-repeat center;
  background-size: cover;
  margin:none;
  padding:none;
  min-height: 350px;"
  >
</div>
<!--//banner -->
      <!-- short -->
      <div class="using-border py-3">
         <div class="inner_breadcrumb  ml-4">
            <ul class="short_ls">
               <li>
                  <a  href="/<%=storeId%>">Home</a>
                  <span> /</span>
               </li>
                <li class="breadcrumb-item active" aria-current="page"><a href=""><%=product.fname%></a></li>
            </ul>
         </div>
      </div>
      <!-- //short-->
      <!--//banner -->
      <!--/shop-->
      <section class="banner-bottom py-lg-5 py-3">
         <div class="container">
            <div class="inner-sec-shop pt-lg-4 pt-3">
               <div class="row">
                  <div class="col-lg-4 single-right-left ">
                     <div class="grid images_3_of_2">
                        <div class="flexslider1">
                           <ul class="slides">
                           <%product.images.forEach(function(image){%>
                              <li data-thumb="<%=image.url%>">
                                 <div class="thumb-image"> <img src="<%=image.url%>" data-imagezoom="true" class="img-fluid" alt="<%=image.caption%>"> </div>
                              </li>
                              <%})%>
                            <!--  <li data-thumb="/theme-01/images/f1.jpg">
                                 <div class="thumb-image"> <img src="/theme-01/images/f1.jpg" data-imagezoom="true" class="img-fluid" alt=" "> </div>
                              </li>
                              <li data-thumb="/theme-01/images/f3.jpg">
                                 <div class="thumb-image"> <img src="/theme-01/images/f3.jpg" data-imagezoom="true" class="img-fluid" alt=" "> </div>
                              </li> -->
                           </ul>
                           <div class="clearfix"></div>
                        </div>
                     </div>
                  </div>
                  <div class="col-lg-8 single-right-left simpleCart_shelfItem">
                     <h3><%=product.fname%></h3>
                     <h6><%=product.lname%></h6>
                     <hr>
                     <p ><span class="text-info">Summary:</span><%=product.summary%>
                      </p>
                     <p><span class="text-info">Remaining Item:</span><%=product.count%></p>
                     
                     <p><span class="text-info">SKU#:</span><%=product.sku%></p>
                     <form action="/<%=storeId%>/cart" method="POST">
                     <%_product.variants.forEach(function(variant){%>
                    
                     <div class="occasional">
                        <h5 class="font-weight-bold text-info"><%=variant.name%> <span class="text-danger">*</span></h5>
                           <%_var i=1;%>
                           <%variant.options.forEach(function(option){%>
                        <div class="colr ert">
                           <label class="radio" for="<%=option%>"><%=option%> </label>
                           <input 
                                 type="radio" 
                                 id="<%=option%>" 
                                 name="<%=variant.name%>" 
                                 value="<%=option%>"
                                 <%if(i==1){%> checked <%}%>
                                 />
                            
                        </div>

                         <%i++;})%>
                       
                        <div class="clearfix"> 
                      </div>
                      
                   </div>
                                    
                                    <h4 class="font-weight-bold text-info">Price: $<%=product.price%></h4>
                                    <div class="mt-3">
                                        
                                        
                                        <div>
                                        
                                         <input
                                            type="hidden"
                                            name="productId"
                                            value="<%= product._id %>"
                                        />
                                        <input type="hidden" name="nonce" value="<%= nonce %>" />
                                        <input type="hidden" name="storeId" value="<%=storeId%>"/>
                                       
                                       <div class="">
                                            <h6  class="font-weight-bold text-info">Quantity :</h6>
                                            	<input
                                                type="number"
                                                class=""
                                                min="1"
                                                max="<%=product.count%>"
                                                name="qty"
                                                value="1"
                                             />
                                            </div><br>

                                          <button class="btn btn-info btn-lg" type="submit" role="button" <%if(product.count==0){%> disabled <%}%>>ADD TO CART</button>
                                          </form>
                                       </div>
                                        
                                </div>
                 <%})%>
                  <!--/tabs-->
              
			<!-- start table-->

			
            <!--//tabs-->
               </div>
               
                <div class="col-md-12 m-4">
                <hr/>
                    <div class="font-weight-bold text-primary">
                    Description:
                    </div>
                     <div>
                       <%=product.description%>
                     </div>
                
                     <div>
                     <p class="font-weight-bold text-primary"> More information:</p>
                        <div class="col-md-12">
                              <div class="table-responsive">
                                 <table class="table table-bordered table-hover">
                                 <tbody>
                                    <tr>
                              <th>Name</th>
                              <th>Value</th>
                           </tr>
                        <%product.attributes.forEach(function(attribute){%>
                           <tr>
                              <td><%=attribute.name%></td>
                              <td><%=attribute.value%></td>
                           </tr>
                           <%})%>
                                 </tbody>
                                 
                                 </table>
                                 </div>
                              
                              <!--end of .table-responsive-->
                              </div>
                     </div>
               </div>
            </div>
         </div>
      </section>