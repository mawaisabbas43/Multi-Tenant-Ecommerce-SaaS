  background: url(<%if(store.image.url!=null){%><%=store.image.url%><%}else{%>/theme-01/images/b2.jpg<%}%>) no-repeat center;
  background-size: cover;
  margin:none;
  padding:none;
  min-height: 350px;"
  >
</div>
<!--//banner -->
<div class="">
          <!-- breadcrumbs -->
<div class="using-border py-3">
         <div class="inner_breadcrumb  ml-4">
            <ul class="short_ls">
               <li>
                  <a href="/<%=storeId%>">Home</a>
                  <span>/ </span>
               </li>
               <li>Shop Now</li>
            </ul>
         </div>
      </div>
    <!-- //breadcrumbs -->


<!--  -->
    <section class="wthree-row pt-3 pb-sm-5 w3-">
        <div class="container">
            <h5 class="head_agileinfo text-center text-capitalize pb-5">
                SHIPPING ADDRESS</h5>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8 border border-info">
                    <!--  form grid -->
                    <div class="-top1">
                        <form class="f-color" method="post" action="/<%=storeId%>/checkout">
                            
                            
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="contactusername">First Name:</label>
                                        <input type="text" class="form-control" name="first_name" id="fname" required="">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="contactusername">Last Name:</label>
                                        <input type="text" class="form-control" name="last_name"  id="lname" required="">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="contactusername">Address:</label>
                                <input type="text" class="form-control" name="address" id="address" required="">
                            </div>
                            <div class="form-group">
                                <label for="contactusername">Country:</label>
                                <input type="text" class="form-control" name="country" id="country" required="">
                            </div>
                             <div class="form-group">
                                <label for="contactusername">City:</label>
                                <input type="text" class="form-control" name="city" id="city" required="">
                            </div>
                             <div class="form-group">
                                <label for="contactusername">State:</label>
                                <input type="text" class="form-control" name="state" id="state" required="">
                            </div>
                            <div class="form-group">
                                <label for="contactusername">Zip / Postal Code:</label>
                                <input type="text" class="form-control" name="zip_code" id="postalcode" required="">
                            </div>
                            <div class="form-group">
                                <label for="contactusername">Phone Number:</label>
                                <input type="text" class="form-control" name="phone_number" id="phonenumber" required="">
                            </div>
                            <div class="form-group">
                                <label for="contactemail">Email Address</label>
                                <input type="email" name="email_address" class="form-control" id="contactemail" required="">
                            </div>
                            
                             <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                  <input type="hidden" name="nonce" value="<%= nonce %>" />
                                  <button
                                    type="submit"
                                    class="btn btn-primary btn-submit-fix"
                                    value="Buy"
                                  >
                                    Place Order
                                  </button>
                                </div>
                              </div>
                        </form>
                    </div>
                    <!--  // form grid ends here -->
                </div>
                <div class="col-md-2"></div>
                <!--  details -->
                
            </div>
            <!-- // details container -->
        </div>
       
        <!--// map grid ends here-->
    </section>


