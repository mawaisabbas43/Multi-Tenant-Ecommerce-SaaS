<% layout('theme-01/layout') -%>

      <!--banner -->
      <div  style="text-align: center;
      background: url(<%if(store.image.url!=null){%><%=store.image.url%><%}else{%>/theme-01/images/b2.jpg<%}%>) no-repeat center;
      background-size: cover;
      margin:none;
      padding:none;
      min-height: 350px;"
      >
      </div>
      <!--//banner -->
      <!-- short -->
      <div class="using-border py-3">
         <div class="inner_breadcrumb  ml-4">
            <ul class="short_ls">
               <li>
                  <a href="/<%=storeId%>">Home</a>
                  <span>/ </span>
               </li>
               <li>Contact</li>
            </ul>
         </div>
      </div>
      <!-- //short-->
      <!--contact -->
      <section class="contact py-lg-4 py-md-3 py-sm-3 py-3">
      <h3 class="title text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">Contact US</h3>
      <div class="row m-4">
      
         <div class="col-md-6 col-sm-6">
            <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
            
             <% if (message.length>0) { %>
					<div class="alert alert-success alert-dismissible">
						<%= message %>
					</div>
					<% } %>
            <div class="contact-list-grid">
               <form action="/api/feedbacks/" method="post">
                  <div class=" agile-wls-contact-mid">
                     <div class="form-group contact-forms">
                        <input type="text" class="form-control" placeholder="Name" required="">
                     </div>
                     <div class="form-group contact-forms">
                        <input type="email" class="form-control" placeholder="Enter Email" required="">
                     </div>
                     <div class="form-group contact-forms">
                        <input type="text" class="form-control" placeholder="Phone" required="">
                     </div>
                     <div class="form-group contact-forms">
                        <textarea class="form-control" rows="3" required=""></textarea>
                     </div>
                      <input type="hidden" name="storeId" value="<%=storeId%>" >
                     <button type="submit" class="btn btn-block sent-butnn">Send</button>
                  </div>
               </form>
            </div>
         </div>
         </div>
         <div class="col-md-6 col-sm-6">
            <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
             <div class="address">
                        <h5 class="pb-3 text-capitalize">Address</h5>
                        <%contactUs.addresses.forEach(address=>{%>
                        <address>
                          <p><%=address%></p>
                        </address>
                        <%})%>
                    </div>
                     <!-- contact details grid2-->
                    <div class="address my-5">
                        <h5 class="pb-3 text-capitalize">phone</h5>
                        <%contactUs.phones.forEach(phone=>{%>
                         <p><%=phone%></p>
						<%})%>
                    </div>
                    <!-- contact details grid3 -->
                    <div class="address mt-md-0 mt-3">
                        <h5 class="pb-3 text-capitalize">Email</h5>
                        <%contactUs.emails.forEach(email=>{%>
                         <p><a href="mailto:<%=email%>"><%=email%></a></p>
						<%})%>
                    </div>
                    <!-- //contact details row ends here -->

         </div>
         </div>
      </div>
         <h3 class="title text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">Get directions</h3>
         <div class="row container-fluid">
            <div class="col-md-12 col-md-12 ">
                  <div class="text-center  ">
                     <iframe frameborder="0" 
                              marginheight="0" 
                              marginwidth="0" 
                              width="100%" 
                              height="100%" 
                              scrolling="auto"
                              src="<%=contactUs.map%>"
                              allowfullscreen>
                     </iframe>
                  </div>
                  
            </div>
            
         </div>
          
         
      </section>